{
    "name": "abenevaut/laravel-infrastructure",
    "type": "library",
    "description": "Laravel Infrastructure",
    "keywords": [
        "laravel",
        "infrastructure",
        "hexagonal architecture"
    ],
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Antoine Benevaut",
            "email": "antoine@benevaut.fr"
        }
    ],
    "require": {
        "php": "^8.1",
        "mortexa/laravel-arkitect": "^0.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.5",
        "squizlabs/php_codesniffer": "^3.7",
        "icanhazstring/composer-unused": "^0.8.5",
        "laravel/framework": "^9.45"
    },
    "autoload": {
        "psr-4": {
            "abenevaut\\Infrastructure\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpcs --standard=PSR12 src tests",
            "vendor/bin/phparkitect check --config arkitect.php --target-php-version 8.1",
            "vendor/bin/phpunit"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "abenevaut\\Infrastructure\\App\\Providers\\ArkitectServiceProvider"
            ],
            "dont-discover": [
                "mortexa/laravel-arkitect"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable" : true
}
